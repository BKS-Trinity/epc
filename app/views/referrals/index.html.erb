<h1>Listing referrals</h1>

<%= link_to 'New referral', new_medical_case_referral_path %>

<table>
	<tr>
		<th>Date of write out</th>
		<th>Expiry date</th>
		<th>To</th>
		<th colspan="3"></th>
	</tr>
	
	<% @referrals.each do |referral| %>
	<tr>
		<td><%= referral.dateofwriteout %></td>
		<td><%= referral.expirydate %></td>
		<td><%= referral.to %></td>
		<td><%= link_to 'Show', medical_case_referral_path(referral.medical_case_id, referral) %></td>
		<td><%= link_to 'Edit', edit_medical_case_referral_path(referral.medical_case_id, referral) %></td>
		<td><%= link_to 'Destroy', medical_case_referral_path(referral.medical_case_id, referral),
			method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
	<% end %>
</table>

<%= link_to 'Back', [@medical_case.medical_record, @medical_case] %>
