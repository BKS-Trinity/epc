<h1>Listing diseases</h1>

<%= link_to 'New disease', new_disease_path %>

<table>
	<tr>
		<th>Name</th>
		<th>ICD-10 code</th>
		<th colspan="3"></th>
	</tr>
	
	<% @diseases.each do |disease| %>
	<tr>
		<td><%= disease.name %></td>
		<td><%= disease.icd10 %></td>
		<td><%= link_to 'Show', disease_path(disease) %></td>
		<td><%= link_to 'Edit', edit_disease_path(disease) %></td>
		<td><%= link_to 'Destroy', disease_path(disease), method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
	<% end %>
</table>

<%= link_to 'Back', root_path %>
