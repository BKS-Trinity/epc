<h1><center><b><u>Listing diseases</u></b></center></h1>
<br>
<br>
<h4><%= link_to 'New disease', new_disease_path, class: 'patient' %></h4>
<br>
<br>
<div class="table-responsive">
<table class="table table-bordered">
	<tr>
		<th>Name</th>
		<th>ICD-10 code</th>
		<th colspan="3">Options</th>
	</tr>
	
	<% @diseases.each do |disease| %>
	<tr>
		<td><%= disease.name %></td>
		<td><%= disease.icd10 %></td>
		<td><%= link_to 'Show', disease_path(disease), class: 'btn btn-info btn-sm alink' %></td>
		<td><%= link_to 'Edit', edit_disease_path(disease), class: 'btn btn-primary btn-sm alink' %></td>
		<td><%= link_to 'Destroy', disease_path(disease), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm alink' %></td>
	</tr>
	<% end %>
</table>
</div>
<br>
<%= link_to 'Back', root_path, class: 'btn btn-warning alink' %>
