<h2>Medical case:</h2>

<p>
	<strong>Onset Of Disease:</strong>
	<%= @medical_case.onsetofdisease %>
</p>

<p>
	<strong>Disease:</strong>
	<%= Disease.find(@medical_case.disease_id).name %>
</p>

<p>
	<strong>Doctor:</strong>
	<%= Doctor.find(@medical_case.doctor_id).firstname + " " + Doctor.find(@medical_case.doctor_id).middlename + " " + Doctor.find(@medical_case.doctor_id).lastname %>
</p>
<br>
<%= link_to 'Back', medical_record_medical_cases_path, class: 'btn btn-warning btn-sm alink' %>
| <%= link_to 'Edit', edit_medical_record_medical_case_path(@medical_case.medical_record_id, @medical_case), class: 'btn btn-primary btn-sm alink' %>
<br>
<br>
<p>
	<%= link_to 'Show appointments',
		[@medical_case, @medical_case.appointments.build], class: 'btn btn-info btn-sm alink' %>
</p>
<br>
<p>
	<%= link_to 'Show referrals',
		[@medical_case, @medical_case.referrals.build], class: 'btn btn-info btn-sm alink' %>
</p>
<br>
<p>
	<%= link_to 'Show prescriptions',
		[@medical_case, @medical_case.prescriptions.build], class: 'btn btn-info btn-sm alink' %>
</p>
<br>

<%= link_to 'Back', medical_record_medical_cases_path,  class: 'btn btn-warning btn-sm alink' %>
| <%= link_to 'Edit', edit_medical_record_medical_case_path(@medical_case.medical_record_id, @medical_case), class: 'btn btn-primary btn-sm alink' %>

