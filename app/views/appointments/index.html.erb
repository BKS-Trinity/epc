<h1>Listing appointments</h1>

<%= link_to 'New appointment', new_medical_case_appointment_path %>

<table>
	<tr>
		<th>Year</th>
		<th>Month</th>
		<th>Day</th>
		<th>Hour</th>
		<th>Minute</th>
		<th colspan="3"></th>
	</tr>
	
	<% @appointments.each do |appointment| %>
	<tr>
		<td><%= appointment.year %></td>
		<td><%= appointment.month %></td>
		<td><%= appointment.day %></td>
		<td><%= appointment.hour %></td>
		<td><%= appointment.minute %></td>
		<td><%= link_to 'Show', medical_case_appointment_path(appointment.medical_case_id, appointment) %></td>
		<td><%= link_to 'Edit', edit_medical_case_appointment_path(appointment.medical_case_id, appointment) %></td>
		<td><%= link_to 'Destroy', medical_case_appointment_path(appointment.medical_case_id, appointment),
			method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
	<% end %>
</table>

<%= link_to 'Back', [@medical_case.medical_record, @medical_case] %>
