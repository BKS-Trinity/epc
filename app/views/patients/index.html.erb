<h1><center><b><u>Listing patients</u></b></center></h1>
<br>
<br>
<h4><%= link_to 'New patient', new_patient_path ,class: 'patient' %></h4>
<br>


<table class="table table-bordered">

	<tr>
		<th>First Name</th>
		<th>Middle Name</th>
		<th>Last Name</th>
		<th>Date Of Birth</th>
		<th>Sex</th>
		<th>E-mail Address</th>
		<th>Phone Number</th>
		<th>Mobile Number</th>
		<th>Street Address</th>
		<th>City</th>
		<th>Post/Zip Code</th>
		<th>State/Province</th>
		<th>Country</th>
		<th colspan="3">Options</th>
	</tr>
	
	<% @patients.each do |patient| %>
	<tr>
		<td><%= patient.firstname %></td>
		<td><%= patient.middlename %></td>
		<td><%= patient.lastname %></td>
		<td><%= patient.dateofbirth %></td>
		<td><%= patient.sex %></td>
		<td><%= patient.email %></td>
		<td><%= patient.phone %></td>
		<td><%= patient.mobile %></td>
		<td><%= patient.street %></td>
		<td><%= patient.city %></td>
		<td><%= patient.postcode %></td>
		<td><%= patient.state %></td>
		<td><%= patient.country %></td>
		<td><%= link_to 'Show', patient_path(patient), class: 'btn btn-info btn-sm alink' %></td>
		<td><%= link_to 'Edit', edit_patient_path(patient), class: 'btn btn-primary btn-sm alink' %></td>
		<td><%= link_to 'Destroy', patient_path(patient), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm alink' %></td>
	</tr>
	<% end %>
</table>

<%= link_to 'Back', root_path, class: 'btn btn-warning alink' %>


